{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^3.9.1",
        "@material-ui/icons": "^3.0.2",
        "chroma-js": "^2.0.3",
        "d3": "^5.9.1",
        "hammerjs": "^2.0.8",
        "i18next": "^15.0.4",
        "lodash": "^4.17.11",
        "mapbox-gl": "0.53.0",
        "moment": "^2.23.0",
        "node-sass": "^4.11.0",
        "prop-types": "^15.6.2",
        "raven-js": "^3.27.0",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "react-hammerjs": "^1.0.1",
        "react-i18next": "^10.1.2",
        "react-loadable": "^5.5.0",
        "react-redux": "^6.0.0",
        "react-rotation": "^1.3.0",
        "react-router-dom": "^4.3.1",
        "react-rte": "^0.16.1",
        "react-scripts": "2.1.1",
        "react-sortable-hoc": "^1.2.0",
        "redux": "^4.0.1",
        "redux-action-tools": "^1.2.2",
        "redux-form": "^8.0.4",
        "redux-logger": "^3.0.6",
        "redux-observable": "^1.0.0",
        "redux-thunk": "^2.3.0",
        "rxjs": "^6.3.3",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.84.0",
        "styled-components": "^4.1.3"
    },
    "scripts": {
        "lint": "standard --fix | snazzy",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "if CI=true react-scripts test --coverage --env=jsdom; then echo '✅ Unit test run success'; else echo '❌ Unit test run failure'; exit 1; fi",
        "eject": "react-scripts eject",
        "functional::local": "npm run start:selenium",
        "start:selenium": "selenium-standalone start > /dev/null 2>&1 &",
        "kill:selenium": "lsof -t -i :4444 | xargs kill"
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/__tests__/**/*",
            "!src/__e2e__/**/*",
            "!src/(App|index|serviceWorker|setupTests).js"
        ],
        "coverageReporters": [
            "text",
            "lcov"
        ]
    },
    "standard": {
        "ignore": [
            "build/*",
            "registerServiceWorker.js"
        ],
        "env": {
            "browser": true,
            "jest": true
        },
        "parser": "babel-eslint",
        "globals": [
            "actor",
            "Feature",
            "Scenario"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "@applitools/eyes.webdriverio": "^2.0.1",
        "@fortawesome/fontawesome-free": "^5.7.1",
        "@types/jest": "^24.0.5",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.9.1",
        "enzyme-to-json": "^3.3.5",
        "selenium-standalone": "^6.15.4",
        "snazzy": "^8.0.0",
        "standard": "^12.0.1",
        "webdriverio": "4.14.1"
    }
}
